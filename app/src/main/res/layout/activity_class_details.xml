<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClassDetails"
    android:background="@drawable/backgroundtutor">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Details"
            android:textSize="40dp"
            android:textStyle="bold"
            android:textColor="@color/gold"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/test1"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Subject:"
                android:padding="15dp"
                android:textSize="25dp"
                android:textColor="@color/gold"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/classSubject"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:hint="Subject"
                android:padding="15dp"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/test2"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:text="Price:"
                android:padding="15dp"
                android:textSize="25dp"
                android:textColor="@color/gold"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/classPrice"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:hint="Price"
                android:padding="15dp"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/test3"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:text="Time:"
                android:padding="15dp"
                android:textSize="25dp"
                android:textColor="@color/gold"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/classTime"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:hint="Time"
                android:padding="15dp"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/test4"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:text="Date:"
                android:padding="15dp"
                android:textSize="25dp"
                android:textColor="@color/gold"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/classDate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:hint="Date"
                android:padding="15dp"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/test5"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:text="Details:"
                android:padding="15dp"
                android:textSize="25dp"
                android:textColor="@color/gold"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/classDetails"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:hint="Details"
                android:padding="15dp"
                android:textSize="25dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
        <Button
            android:id="@+id/Enroll"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="Enroll"
            android:textSize="20dp"
            android:layout_marginRight="5dp"
            android:backgroundTint="@color/gold"/>
        <Button
            android:id="@+id/seeLocation"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="See Location"
            android:textSize="20dp"
            android:backgroundTint="@color/gold"/>
        </LinearLayout>
        <Button
            android:id="@+id/rateTutor"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:text="Leave a review"
            android:textSize="20dp"
            android:backgroundTint="@color/gold"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>